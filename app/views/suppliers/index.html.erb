<div class="container">
  <h2>Suppliers</h2>
  <%= link_to "New", new_supplier_path %><br>
  <%= will_paginate @supplier, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Supplier Name</th>

        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>

        <td><%= link_to "Show",  supplier_path(supplier.id) %></td>
        <td><%= link_to "Edit",  edit_supplier_path(supplier.id) %></td>
        <td><%= link_to "Destroy", supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
      <%end%>
    </tbody>
  </table>
</div>